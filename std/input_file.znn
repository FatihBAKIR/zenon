
public embed {
  #include <fstream>
  struct input_file {
    input_file(lite_str<> path) : f(path.data()) {}
    std::ifstream f;
  };
}

extern struct input_file {
  input_file(string);
};

template <T>
T read(input_file mutable* f) {
  embed {
    T t;
    f->f >> t;
    return t;
  }
}

bool is_good(input_file* f) {
  embed { return f->f.good(); }
}

